<div class="login-cover text-center">
  <div class="twitter-logo">
      <i class="fab fa-twitter fa-3x"></i>
  </div>
  <h3>Log in to Twitter</h3>
</div>

<%= form_for (:session), :url => login_path, :html => {class: "text-center login-form"} do |f| %>
  <div class="form-label">
    <%= f.label :username, class: "username-label" %>
  </div>
  <div class="form-input">
    <%= f.text_field :username, class: "username-input", placeholder: "Enter Username" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Log In",  class: "btn btn-primary login-btn"%>    
  </div>
  <%= link_to "Sign up for Twitter", signup_path %>
<% end %>